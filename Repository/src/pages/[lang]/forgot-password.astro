---
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import Layout from '@/layouts/Layout.astro';
import { getLangFromUrl, getStaticPaths, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export { getStaticPaths };
---

<Layout title={t('forgot.title') || 'Mot de passe oublié'}>
    <Header />

    <div class="min-h-screen flex items-center justify-center px-4 py-12" style="margin-top: 100px;">
        <div class="max-w-md w-full">
            <!-- Retour à la connexion -->
            <a
                href={`/${lang}/log`}
                class="inline-flex items-center gap-2 text-[#5C3F32] hover:text-[#8B4513] mb-8 transition-colors"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                {t('forgot.backToLogin') || 'Retour à la connexion'}
            </a>

            <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-10">
                <!-- Icône -->
                <div
                    class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[#5C3F32] to-[#8B4513] rounded-full flex items-center justify-center"
                >
                    <svg
                        class="w-10 h-10 text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"
                        ></path>
                    </svg>
                </div>

                <!-- Titre -->
                <h1 class="text-3xl font-bold text-center text-[#5C3F32] mb-3">
                    {t('forgot.title') || 'Mot de passe oublié ?'}
                </h1>

                <!-- Description -->
                <p class="text-center text-gray-600 mb-8">
                    {t('forgot.description') ||
                        'Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.'}
                </p>

                <!-- Message de succès -->
                <div
                    id="success-message"
                    class="hidden mb-6 p-4 bg-green-50 border border-green-200 rounded-lg"
                >
                    <div class="flex items-start gap-3">
                        <svg
                            class="w-5 h-5 text-green-600 mt-0.5"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-green-800 mb-1">
                                {t('forgot.successTitle') || 'Email envoyé !'}
                            </h3>
                            <p class="text-sm text-green-700">
                                {t('forgot.successMessage') ||
                                    'Vérifiez votre boîte mail et suivez les instructions pour réinitialiser votre mot de passe.'}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Message d'erreur  -->
                <div
                    id="error-message"
                    class="hidden mb-6 p-4 bg-red-50 border border-red-200 rounded-lg"
                >
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-red-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-red-800 mb-1">
                                {t('forgot.errorTitle') || 'Erreur'}
                            </h3>
                            <p class="text-sm text-red-700" id="error-text">
                                {t('forgot.errorMessage') || 'Une erreur est survenue. Veuillez réessayer.'}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Formulaire -->
                <form id="forgot-form" class="space-y-6">
                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-[#5C3F32] mb-2">
                            {t('forgot.email') || 'Adresse email'}
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            placeholder="votre@email.com"
                            class="w-full rounded-lg border-2 border-gray-300 px-4 py-3 transition duration-300 focus:border-[#5C3F32] focus:outline-none"
                        />
                    </div>

                    <!-- Bouton Submit -->
                    <button
                        type="submit"
                        id="submit-btn"
                        class="w-full bg-gradient-to-r from-[#5C3F32] to-[#8B4513] text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-300 flex items-center justify-center gap-2"
                    >
                        <span id="btn-text">{t('forgot.submit') || 'Envoyer le lien'}</span>
                        <svg
                            id="btn-icon"
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                        <!-- Spinner -->
                        <svg
                            id="btn-spinner"
                            class="hidden animate-spin w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                        >
                            <circle
                                class="opacity-25"
                                cx="12"
                                cy="12"
                                r="10"
                                stroke="currentColor"
                                stroke-width="4"></circle>
                            <path
                                class="opacity-75"
                                fill="currentColor"
                                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                            ></path>
                        </svg>
                    </button>
                </form>

                <!-- Divider -->
                <div class="relative my-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white text-gray-500">
                            {t('forgot.or') || 'ou'}
                        </span>
                    </div>
                </div>

                <!-- Lien de retour -->
                <div class="text-center">
                    <p class="text-gray-600">
                        {t('forgot.rememberPassword') || 'Vous vous souvenez de votre mot de passe ?'}
                        <a
                            href={`/${lang}/log`}
                            class="text-[#5C3F32] font-semibold hover:text-[#8B4513] hover:underline ml-1"
                        >
                            {t('forgot.login') || 'Se connecter'}
                        </a>
                    </p>
                </div>
            </div>

            <!-- Info supplémentaire -->
            <div class="mt-6 text-center text-sm text-gray-500">
                <p>
                    {t('forgot.needHelp') || "Besoin d'aide ?"}{' '}
                    <a
                        href={`/${lang}/contact`}
                        class="text-[#5C3F32] hover:text-[#8B4513] hover:underline"
                    >
                        {t('forgot.contactUs') || 'Contactez-nous'}
                    </a>
                </p>
            </div>
        </div>
    </div>

    <Footer />
</Layout>

<script>
    const form = document.getElementById('forgot-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const btnText = document.getElementById('btn-text');
    const btnIcon = document.getElementById('btn-icon');
    const btnSpinner = document.getElementById('btn-spinner');
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');

    form?.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Désactiver le bouton et afficher le spinner
        submitBtn.disabled = true;
        btnText!.textContent = 'Envoi en cours...';
        btnIcon?.classList.add('hidden');
        btnSpinner?.classList.remove('hidden');
        successMessage?.classList.add('hidden');
        errorMessage?.classList.add('hidden');

        const formData = new FormData(form);
        const email = formData.get('email');

        try {
            // Simuler un appel API 
            await new Promise((resolve) => setTimeout(resolve, 2000));

            // TODO: Remplacer appel API 

            // Simuler une réussite
            const success = true;

            if (success) {
                // Afficher le message de succès
                successMessage?.classList.remove('hidden');
                form.reset();

                // Rediriger après 3 secondes
                setTimeout(() => {
                    const lang = document.documentElement.lang || 'fr';
                    window.location.href = `/${lang}/log`;
                }, 3000);
            } else {
                throw new Error('Email not found');
            }
        } catch (error) {
            // Afficher le message d'erreur
            errorMessage?.classList.remove('hidden');
            if (errorText) {
                errorText.textContent =
                    "Aucun compte n'est associé à cette adresse email.";
            }
        } finally {
            // Réactiver le bouton
            submitBtn.disabled = false;
            btnText!.textContent = 'Envoyer le lien';
            btnIcon?.classList.remove('hidden');
            btnSpinner?.classList.add('hidden');
        }
    });
</script>
