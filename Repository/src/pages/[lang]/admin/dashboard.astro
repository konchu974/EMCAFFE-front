---
import Layout from '@/layouts/Layout.astro';
import { getLangFromUrl, getStaticPaths, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export { getStaticPaths };

// Simulation donn√©es 
const stats = {
    totalUsers: 1248,
    totalOrders: 3567,
    totalRevenue: 87650,
    pendingOrders: 23,
};

const recentOrders = [
    { id: '#ORD-001', customer: 'Jean Dupont', amount: 89.99, status: 'completed', date: '2024-01-15' },
    { id: '#ORD-002', customer: 'Marie Martin', amount: 129.50, status: 'pending', date: '2024-01-15' },
    { id: '#ORD-003', customer: 'Pierre Durand', amount: 45.00, status: 'processing', date: '2024-01-14' },
    { id: '#ORD-004', customer: 'Sophie Bernard', amount: 199.99, status: 'completed', date: '2024-01-14' },
    { id: '#ORD-005', customer: 'Luc Petit', amount: 67.50, status: 'cancelled', date: '2024-01-13' },
];

const topProducts = [
    { name: 'Caf√© Arabica Premium', sales: 234, revenue: 2340 },
    { name: 'Expresso Intense', sales: 198, revenue: 1980 },
    { name: 'Caf√© Bio √âquitable', sales: 156, revenue: 1872 },
    { name: 'M√©lange Signature', sales: 145, revenue: 1595 },
];
---

<Layout title={t('admin.dashboard') || 'Dashboard Admin'}>
    <!-- Wrapper principal -->
    <div class="flex min-h-screen bg-gray-50">
        <!-- Sidebar -->
        <aside
            id="sidebar"
            class="fixed inset-y-0 left-0 z-50 w-64 bg-gradient-to-b from-[#5C3F32] to-[#8B4513] text-white transform -translate-x-full lg:translate-x-0 transition-transform duration-300"
        >
            <!-- Logo -->
            <div class="flex items-center justify-between p-6 border-b border-white/10">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"
                            ></path>
                        </svg>
                    </div>
                    <span class="text-xl font-bold">Admin Panel</span>
                </div>
                <button id="close-sidebar" class="lg:hidden">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Navigation -->
            <nav class="p-4 space-y-2">
                <a
                    href={`/${lang}/admin/dashboard`}
                    class="flex items-center gap-3 px-4 py-3 rounded-lg bg-white/10 text-white font-medium"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                        ></path>
                    </svg>
                    {t('admin.dashboard') || 'Dashboard'}
                </a>

                <a
                    href={`/${lang}/admin/orders`}
                    class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10 text-white/80 hover:text-white transition-colors"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                    {t('admin.orders') || 'Commandes'}
                </a>

                <a
                    href={`/${lang}/admin/products`}
                    class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10 text-white/80 hover:text-white transition-colors"
                >
